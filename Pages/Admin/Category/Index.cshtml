@page
@model Project.Pages.Category.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@*<p>
    <a href="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Description)
            </th>
            <th>
                <a href="Create"><img src="https://icons-for-free.com/iconfiles/png/512/create+cross+new+plus+icon-1320168707626274697.png" /></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Category) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <style>
                        img {
                            width: 5%;
                        }
                    </style>
                    <a class="nav-link text-dark" href="/Admin/Category/Edit?id=@item.CategoryID"><img src="https://cdn-icons-png.flaticon.com/512/1827/1827951.png" /></a> 
                    <a class="nav-link text-dark" href="/Admin/Category/Details?id=@item.CategoryID"><img src="https://icon-library.com/images/icon-for-details/icon-for-details-1.jpg" /></a> 
                    <a class="nav-link text-dark" href="/Admin/Category/Delete?id=@item.CategoryID"><img src="https://cdn-icons-png.flaticon.com/512/1345/1345874.png" /></a>
            </td>
        </tr>
}
    </tbody>
</table>

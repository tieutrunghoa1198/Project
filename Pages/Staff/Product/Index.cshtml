@page
@model Project.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a href="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].QuantityPerUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Suppliers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Categories)
            </th>
            <th>
                <a href="Create"><img src="https://icons-for-free.com/iconfiles/png/512/create+cross+new+plus+icon-1320168707626274697.png" /></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityPerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                    @*@Html.DisplayFor(modelItem => item.ProductImage)*@ <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ProductImage)" alt="Card image cap">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suppliers.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.CategoryID)
            </td>
            <td>
                    <style>
                        img {
                            width: 15%;
                        }
                    </style>
                    <a class="nav-link text-dark" href="/Staff/Product/Edit?id=@item.ProductID"><img src="https://cdn-icons-png.flaticon.com/512/1827/1827951.png" /></a> |
                    <a class="nav-link text-dark" href="/Staff/Product/Details?id=@item.ProductID"><img src="https://icon-library.com/images/icon-for-details/icon-for-details-1.jpg" /></a> |
                    <a class="nav-link text-dark" href="/Staff/Product/Delete?id=@item.ProductID"><img src="https://cdn-icons-png.flaticon.com/512/1345/1345874.png" /></a>
            </td>
        </tr>
}
    </tbody>
</table>

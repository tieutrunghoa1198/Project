@page
@model Project.Pages.OrderDetail.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@*<p>
    <a href="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].Product)
            </th>
            <th>
                <a href="Create"><img src="https://icons-for-free.com/iconfiles/png/512/create+cross+new+plus+icon-1320168707626274697.png" /></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                    <style>
                        img {
                            width: 4%;
                        }
                    </style>
                    <a class="nav-link text-dark" href="/Staff/Order/Edit?id=@item.OrderID"><img src="https://cdn-icons-png.flaticon.com/512/1827/1827951.png" /></a> |
                    <a class="nav-link text-dark" href="/Staff/Order/Details?id=@item.OrderID"><img src="https://icon-library.com/images/icon-for-details/icon-for-details-1.jpg" /></a> |
                    <a class="nav-link text-dark" href="/Staff/Order/Delete?id=@item.OrderID"><img src="https://cdn-icons-png.flaticon.com/512/1345/1345874.png" /></a> |
            </td>
        </tr>
}
    </tbody>
</table>
